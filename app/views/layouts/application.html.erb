  <meta property="og:image" content="<%= image_url('URL-SHARE_mini.png') %>" />

  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:site" content="@pakira_rrr" />
  <meta name="twitter:description" content="まずは左上の「遊び方」をクリック！まだトップページだけですが、今後実装していきたいです。" />
  <meta property="twitter:image" content="<%= asset_url('URL-SHARE_mini.png') %>" />


<%# ナビゲーションバーをトグルに変更 %>
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>あるある神経衰弱</title>
  <style>
    .toggle-content {
      display: none;}
  </style>

</head>


<%# ナビゲーションバーをトグルに変更 %>
  <body>
    <%# ヘッダーを表示、全ページで共通のレイアウトを定義 %>
    <%# クラス名をつけた %>
    <div class="header-container">
    <%= render 'shared/header' %>
    </div>
    <%= yield %>

    <%# フッターを表示、全ページで共通のレイアウトを定義 %>
    <div class="footer-container">
    <%= render 'shared/footer' %>
  </body>

</div>
</html>